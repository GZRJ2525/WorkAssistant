<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.CallOffBusinessByDirectorActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/sw_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="归属类型："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />

                <TextView
                    android:id="@+id/call_off_business_by_director_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="点击选择"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sw_15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/sw_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工程状态："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />

                <TextView
                    android:id="@+id/call_off_business_by_director_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="点击选择"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sw_15dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止/取消原因："
                android:layout_margin="@dimen/sw_5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <EditText
                android:id="@+id/call_off_business_by_director_reason_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/sw_100dp"
                android:gravity="top"
                android:layout_marginLeft="@dimen/sw_5dp"
                android:layout_marginRight="@dimen/sw_5dp"
                android:background="@drawable/bg_text"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/edit_cursor_blue"
                android:textSize="@dimen/sw_15dp" />

            <Button
                android:id="@+id/call_off_business_by_director_submit_btn"
                android:layout_width="@dimen/sw_60dp"
                android:layout_height="@dimen/sw_30dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/sw_5dp"
                android:layout_marginTop="@dimen/sw_10dp"
                android:background="@drawable/btn_blue_frame"
                android:text="提交"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
